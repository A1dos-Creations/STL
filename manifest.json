{
    "name": "School Tools",
    "description": "Simplifies the school day with useful school tools and resources.",
    "version": "2.0.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "Timer/background.js"
    },
    "permissions": ["storage", "offscreen", "alarms", "activeTab"],
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "action": {
      "default_popup": "main.html"
    },
    "host_permissions": [
      "https://*.firebaseapp.com/*",
      "https://*.googleapis.com/*"
    ]
}